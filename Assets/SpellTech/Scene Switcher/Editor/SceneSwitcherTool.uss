
.main-container-scene-switch{
    display: flex;
    width: 100%;
    height: 100%;
    padding: 5px;
    background-color: rgb(45, 45, 45);
}

.main-container-scene-switch.wide-layout {
    flex-direction: row;
}
.wide-layout .left-column {
    flex-grow: 1;
    flex-shrink: 1;
    min-width: 250px;
}
.wide-layout .right-column {
    flex-grow: 0;
    flex-shrink: 0;
    width: 210px;
}

.main-container-scene-switch.narrow-layout {
    flex-direction: column;
}
.narrow-layout .column {
    width: 100%;
    min-width: 0;
}
.narrow-layout .left-column {
    flex-grow: 1;
    flex-shrink: 1;
    height: 60%;
    margin-bottom: 5px;
}
.narrow-layout .right-column {
    flex-grow: 0;
    flex-shrink: 0;
    height: auto;
}


.column {
    display: flex;
    flex-direction: column;
    margin: 2px;
    padding: 0;
    overflow: hidden;
}

.box {
    border-width: 1px;
    border-color: rgb(35, 35, 35);
    background-color: rgb(55, 55, 55);
    border-radius: 4px;
    padding: 8px;
}

.top-controls {
    flex-shrink: 0;
    margin-bottom: 8px;
}
.search-section {
    flex-direction: row;
    align-items: center;
    margin-bottom: 6px;
    padding-left: 4px;
}
.list-container {
    flex-grow: 1;
    position: relative;
    overflow: hidden;
    border-width: 2px;
    border-color: transparent;
    border-radius: 4px;
    background-color: rgb(48, 48, 48);
}
.scene-list-view {
    width: 100%;
    height: 100%;
}

.drag-hover-active {
    border-color: rgb(70, 160, 240);
    -unity-border-style: dashed;
    background-color: rgba(70, 160, 240, 0.15);
}

.empty-list-hint-container {
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    justify-content: center;
    align-items: center;
    pointer-events: none;
}
.drag-hint-label {
    -unity-text-align: middle-center;
    color: rgb(160, 160, 160);
    font-size: 12px;
    white-space: normal;
    padding: 20px;
    -unity-font-style: italic;
}


.list-item-container {
    flex-direction: row;
    align-items: center;
    padding: 4px 6px;
    height: 28px;
}
#list-item-icon {
    width: 16px; height: 16px;
    margin-right: 6px;
    flex-shrink: 0;
}
#list-item-label {
    flex-grow: 1;
    font-size: 12px;
    color: rgb(210, 210, 210);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    -unity-text-overflow-position: end;
}
.scene-list-view .unity-list-view__item:hover {
    background-color: rgb(70, 70, 70);
}
.scene-list-view .unity-list-view__item--selected {
    background-color: rgb(44, 93, 135);
}

.button-scroll-view {
    flex-grow: 1;
    margin: -8px;
    padding: 8px;
}
.header-label {
    -unity-font-style: bold;
    font-size: 13px;
    margin-top: 4px;
    margin-bottom: 6px;
    color: rgb(200, 200, 200);
    border-bottom-width: 1px;
    border-bottom-color: rgb(80, 80, 80);
    padding-bottom: 2px;
}

.search-container {
    flex-direction: row;
    align-items: center;
    margin-bottom: 6px;
    background-color: rgb(40, 40, 40);
    border-radius: 3px;
}
.search-icon {
    width: 16px; height: 16px;
    margin-left: 4px; margin-right: 8px;
    margin-top: 2px; margin-bottom: 5px;
}
.search-container > .unity-text-field {
    flex-grow: 1;
    margin: 0; border-width: 0; background-color: transparent;
}
Button {
    height: 28px;
    margin: 3px 0;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    background-color: rgb(70, 70, 70);
    border-color: rgb(40,40,40);
    border-radius: 3px;
}
Button:hover { background-color: rgb(85, 85, 85); }
.button-icon {
    width: 16px; height: 16px;
    margin-left: 4px; margin-right: 8px;
}
DropdownField { margin: 4px 0; }

.scene-switcher-popup {
    width: 480px;
    height: 400px;
    background-color: rgb(56, 56, 56);
    border-left-width: 1px;
    border-right-width: 1px;
    border-bottom-width: 1px;
    border-color: rgb(35, 35, 35);
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
}

.popup-capture-element {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0); 
}